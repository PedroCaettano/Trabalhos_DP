// Primeiro exercício/trabalho da DP

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std; 

int main(){
std::srand(std::time(0)); //Para Iniciar a semente de geração de números aleatórios

    int n1 = rand() % 2 + 1; // Intervalo entre 1 ≤ n ≤ 2
    int n2 = rand() % 100 + 1; // Intervalo entre 1 ≤ n ≤ 100
    int n3 = rand() % 10; // Intervalo entre 0 ≤ n ≤ 9
    int n4 = rand() % 113 + 1000; // Intervalo entre 1000 ≤ n ≤ 1112
    int n5 = rand() % 3 - 1; // Intervalo entre -1 ≤ n ≤ 1
    int n6 = rand() % 15 - 3; // Intervalo entre -3 ≤ n ≤ 11

    // Imprimindo os números gerados
    std::cout << "n1: " << n1 << std::endl;
    std::cout << "n2: " << n2 << std::endl;
    std::cout << "n3: " << n3 << std::endl;
    std::cout << "n4: " << n4 << std::endl;
    std::cout << "n5: " << n5 << std::endl;
    std::cout << "n6: " << n6 << std::endl;

return 0;
}
