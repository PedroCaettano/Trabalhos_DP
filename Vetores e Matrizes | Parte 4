//Arrays Bidimensionais | Parte 2
// Usando com valores diferentes 

#include <iostream> 

using namespace std;

int main(){

int matriz [3] [4];
int 1,c;


for (1 = 0; 1<3; 1++) {
for (c=0; c<4; c++) {
    cin >> matriz [1] [c];
}
}

for (1=0; 1<3; 1++){
    for (c=0; c<4;c++){

        cout << matriz [1] [c] << " ";
    }
    cout << "\n";
}




retun 0;

}

// Imprimindo Matrizes:
#include <iostream>
using namespace std;

int main(){
int matriz [2][3] = {1,2,3},{4,5,6};
for (int linha =0;; linha < 2; linha ++){
     for (int coluna = 0; coluna < 3; coluna++){
     cout << matriz[linha][coluna] << " ";
     }
     cout << endl;
}

    return 0;
}
